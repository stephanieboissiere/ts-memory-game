{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "experimentalDecorators": true,
        "module": "amd",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./build",
        "removeComments": true,  
        "strict": true,
        "strictNullChecks":false,
        "noImplicitAny": true,
        "declaration": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "./node_modules",
        "**/*.spec.ts",
        "./build"
    ]
}